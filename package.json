{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "bootstrap": "turbo gen bootstrap --args",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --experimental-cli --write \"**/*.{js,jsx,json,ts,tsx,md,mdx}\""
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.15",
    "@transletta/eslint-config": "workspace:*",
    "@transletta/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "tsup": "catalog:build",
    "turbo": "^2.5.8",
    "typescript": "catalog:build",
    "use-macro": "^1.1.0"
  },
  "packageManager": "bun@1.3.0",
  "engines": {
    "node": ">=20"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalogs": {
      "build": {
        "@types/node": "^24.9.1",
        "tsup": "^8.5.0",
        "typescript": "^5.9.3"
      }
    }
  },
  "dependencies": {
    "@turbo/gen": "^2.5.8"
  }
